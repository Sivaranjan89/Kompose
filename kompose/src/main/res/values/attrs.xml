<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="OTPView">
        <attr name="boxWidth" format="dimension" />
        <attr name="boxHeight" format="dimension" />
        <attr name="isVertical" format="boolean" />
        <attr name="spacing" format="dimension" />
        <attr name="boxCount" format="integer" />
        <attr name="showOtp" format="boolean" />
        <attr name="openWithKeyboard" format="boolean" />
        <attr name="disableOtp" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="backgroundColor" format="color"/>
        <attr name="strokeColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="useOriginalBackground" format="boolean" />
        <attr name="visibleCursor" format="boolean" />
        <attr name="disabledAlpha" format="float" />
    </declare-styleable>

    <declare-styleable name="UIButton">
        <attr name="compWidth" format="dimension"/>
        <attr name="compHeight" format="dimension"/>
        <attr name="text" format="string" />
        <attr name="backgroundColor"/>
        <attr name="strokeColor"/>
        <attr name="cornerRadius"/>
        <attr name="strokeWidth"/>
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="textStyle" format="integer">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
        </attr>
        <attr name="icon" format="reference" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconPosition" format="integer">
            <enum name="left" value="0"/>
            <enum name="top" value="1"/>
            <enum name="right" value="2"/>
            <enum name="bottom" value="3"/>
        </attr>
        <attr name="backgroundImage" format="reference" />
        <attr name="gravity" format="integer">
            <enum name="center" value="17" />
            <enum name="left" value="3" />
            <enum name="leftCenterVertical" value="19" />
            <enum name="right" value="5" />
            <enum name="rightCenterVertical" value="21" />
            <enum name="top" value="48"/>
            <enum name="topCenterHorizontal" value="1" />
            <enum name="bottom" value="80"/>
            <enum name="bottomCenterHorizontal" value="81" />
        </attr>
        <attr name="spacing" />
        <attr name="fontPath" format="string" />
    </declare-styleable>

</resources>